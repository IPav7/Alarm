<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_delete_white_24dp" />

        <View
            android:id="@+id/horLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvLeft"
            android:layout_marginTop="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horLine"
            android:layout_marginStart="10dp"
            android:textSize="64sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvTime"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="25sp"
                android:id="@+id/tvOnce"
                android:layout_gravity="center_vertical"
                android:text="@string/once"/>

            <ImageView
                android:id="@+id/imgDay1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/monday"
                android:src="@drawable/day1e" />

            <ImageView
                android:id="@+id/imgDay2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/tuesday"
                android:src="@drawable/day2e" />

            <ImageView
                android:id="@+id/imgDay3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/wednesday"
                android:src="@drawable/day3e" />

            <ImageView
                android:id="@+id/imgDay4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/thursday"
                android:src="@drawable/day4e" />

            <ImageView
                android:id="@+id/imgDay5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/friday"
                android:src="@drawable/day5e" />

            <ImageView
                android:id="@+id/imgDay6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/saturday"
                android:src="@drawable/day6e" />

            <ImageView
                android:id="@+id/imgDay7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/sunday"
                android:layout_height="match_parent"
                android:src="@drawable/day7e" />

        </LinearLayout>


        <Switch
            android:id="@+id/swEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/horLine"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>